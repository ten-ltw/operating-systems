@import 'code.styl';
@import 'article.styl';
@import 'nav.styl';
@import 'sidebar.styl';

color-gray = #e1e1e1;
color-dark-black = #2d2d2d;

html, body {
  margin: 0;
  height: 100%;
  font-family: 'Helvetica Neue', Helvetica, Roboto, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;

  @media screen and (max-width: 1200px) {
    font-size: 15px;
  }

  @media screen and (max-width: 864px) {
    font-size: 12px;
  }

  #app {
    height: 100%;
  }
}

.ten-layout-row {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.ten-layout-column {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.ten-layout-dynamic {
  display: flex;
  flex: 1 1 auto;
}

.ten-layout-static {
  display: flex;
  flex: 0 0 auto;
}

.ten-layout-top {
  background-color: color-dark-black;
  height: 8.3em;
}

.ten-layout-main {
  background-color: color-gray;
}

.ten-layout-bottom {
  height: 2.67em;
}

.ten-layout-advertisement {
  width: 20%;
}

@media screen and (max-width: 1400px) {
  .ten-layout-advertisement {
    width: 10%;
  }
}

@media screen and (max-width: 1200px) {
  .ten-layout-advertisement {
    display: none;
  }
}

.ten-layout-article {
  background-color: color-white;
  width: 46.67em;
  height: 100%;
}

@media screen and (max-width: 690px) {
  .ten-layout-article {
    width: 100%;
  }
}

.ten-layout-sidebar {
  width: 100%;
  overflow: hidden;
}

@media screen and (max-width: 690px) {
  .ten-layout-sidebar {
    display: none;
  }
}
